<div class="container m-4">

  <h3>Add Story</h3>
  <div class="row">
    <form action="/stories" method="POST" class="col s12">
      <div class="row">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" class="form-control" />
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <label for="exampleSelect2" class="form-label mt-4">Visibility</label>
          <select id="status" name="status" class="form-select">
            <option value="public" selected>Public</option>
            <option value="private">Private</option>
          </select>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <label for="exampleTextarea" class="form-label mt-4">Tell Us Your
            Story:</label>
          <textarea
            class="form-control"
            rows="3"
            id="body"
            name="body"
          ></textarea>
        </div>
      </div>

      <div class="row">
        <input type="submit" value="Save" class="btn btn-success my-2" />
        <a href="/dashboard" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>