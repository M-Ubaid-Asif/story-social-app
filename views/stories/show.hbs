{{>_header}}
<div class="container py-5 px-5">

<div class="row ">
  <div class="col s12  m-5">
    <h3>{{story.title}}{{{editIcon story.user user story._id}}}
    </h3>

    <div class="card">
      <div class="card-content">
        {{{story.body}}}
        <br />
        <span class="card-title" style="color:gray;">{{formatDate
            date
            "MMMM Do YYYY, h:mm:ss a"
          }}</span>
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <h4 class="card-title">{{story.user.displayName}}</h4>
        <img
          src="{{story.user.image}}"
          class="circle responsive-img img-small"
          style="width: 100px;height: 100px; border-radius:50%;object-fit:cover;"
        />
      </div>
      <div class="card-action">
        <a href="/stories/user/{{story.user._id}}">More From
          {{story.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>
</div>