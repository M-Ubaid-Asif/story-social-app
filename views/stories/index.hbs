{{>_header}}
<h3>Stories</h3>

<div class="row">
  {{#each stories}}
    <div class="col s-12 m-4">
      <div class="card">
        <div class="card-image">
          {{{editIcon user ../user _id}}}
        </div>
        <div class="card-content text-center">
          <h5>{{title}}</h5>
          <p>{{stripTags (truncate body 15)}}</p>
          <br />
          <div class="chip text-center">
            <img
              src="{{user.image}}"
              alt=""
              style="width: 30px;height: 30px;object-fit:cover;border-radius:50%  "
            />
            <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
          </div>
        </div>
        <div class="card-action text-center">
          <a href="/stories/{{_id}}" class="btn btn-secondary">Read more...</a>
        </div>
      </div>
    </div>

  {{else}}
    <p>No Stories to display</p>
  {{/each}}
</div>